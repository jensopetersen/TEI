--><?xml-model href="http://tei.it.ox.ac.uk/jenkins/job/TEIP5/lastSuccessfulBuild/artifact/release/xml/tei/odd/p5.nvdl" type="application/xml" schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?><elementSpec xmlns:sch="http://purl.oclc.org/dsdl/schematron"
             xmlns="http://www.tei-c.org/ns/1.0"
             ident="alternate"
             module="tagdocs">
          <desc versionDate="2013-11-21" xml:lang="en">an alternation of references</desc>
          <classes>
            <memberOf key="model.contentPart"/>
            <memberOf key="att.global"/>
            <memberOf key="att.repeatable"/>
          </classes>
          <content>
	    <classRef key="model.contentPart" maxOccurs="unbounded"/>
          </content>
  <constraintSpec ident="alternatechilden" scheme="isoschematron">
      <constraint>
         <sch:assert test="count(*)&gt;1">The alternate element must have at least two child elements</sch:assert>
      </constraint>
  </constraintSpec>

  <constraintSpec xmlns:tei="http://www.tei-c.org/ns/1.0"
                   ident="dataSpecCase"
                   scheme="isoschematron">
      <constraint>
         <sch:report test="     parent::tei:dataSpec     and child::*[not((self::tei:dataRef) or (self::tei:valList)) ]">An alternate element inside a dataSpec may contain only dataRef or valList children </sch:report>
      </constraint>
   </constraintSpec>  
  <!--<report test=“parent::tei:dataSpec and *[not(self::tei:dataRef)]”>
    -->
  <exemplum xml:lang="en">
      <egXML xmlns="http://www.tei-c.org/ns/Examples" xml:lang="en">
         <content>
            <alternate>
	              <elementRef key="name"/>
	              <elementRef key="persName"/>
            </alternate>
         </content>
      </egXML>
      <p>This example content model permits either a <gi>name</gi> or a
    <gi>persName</gi>. </p>
  </exemplum>
  <exemplum xml:lang="und">
      <egXML xmlns="http://www.tei-c.org/ns/Examples">
         <dataSpec ident="teidata.probCert">
            <desc versionDate="2015-05-20" xml:lang="en">defines a datatype which may indicate either probability or certainty.</desc>
            <content>
	      <alternate>
               <dataRef key="teidata.probability"/>
               <dataRef key="teidata.certainty"/>
            </alternate>
</content>
         </dataSpec>
      </egXML>
  </exemplum>
  
</elementSpec>
